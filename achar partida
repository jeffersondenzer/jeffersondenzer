import pyautogui
import pyscreeze
import time
import win32com.client as win32
import tkinter as tk
from tkinter import *




# TESTE DE MESCLAGEM COM A JANELA


janela = tk.Tk()

#CRIANDO A JANELA E DEFININDO TAMANHO MÁXIMO/MÍNIMO
janela.title('Lobby Bot League of Legends.')
janela.minsize(400,300)
janela.maxsize(400,300)


# CRIAR FUNÇÃO PARA O BOTÃO SABER QUE ELE TEM QUE SALVAR OS DADOS NA VARIÁVEL

def iniciar():
    poutput1 = char1input.get()
    poutput2 = char2input.get()
    poutput3 = char3input.get()
    boutput1 = ban1input.get()
    boutput2 = ban2input.get()
    routput1 = runainput.get()
    png = ".png"

    poutput1png = poutput1 + png
    poutput2png = poutput2 + png
    poutput3png = poutput3 + png
    boutput1png = boutput1 + png
    boutput2png = boutput2 + png
    routput1png = routput1 + png


#PERSONAGENS / BANS
#TEXTOS
nome1 = tk.Label(janela, text="Primeiro personagem:").grid(row=0, padx=5, pady=5)
nome2 = tk.Label(janela, text="Segundo personagem:").grid(row=1, padx=5, pady=5)
nome3 = tk.Label(janela, text="Terceiro personagem:").grid(row=2, padx=5, pady=5)
ban1 = tk.Label(janela, text="Primeiro ban").grid(row=3, padx=5, pady=5)
ban2 = tk.Label(janela, text="Segundo ban").grid(row=4, padx=5, pady=5)
runa1 = tk.Label(janela, text="Selecione a runa SALVA:").grid(row=5, padx=5, pady=5)






#TEXTBOX VARIÁVEL E BOX
char1input = tk.Entry(janela)
char2input = tk.Entry(janela)
char3input = tk.Entry(janela)
ban1input = tk.Entry(janela)
ban2input = tk.Entry(janela)
runainput = tk.Entry(janela)

char1input.grid(row=0, column=1, padx=5, pady=5)
char2input.grid(row=1, column=1, padx=5, pady=5)
char3input.grid(row=2, column=1, padx=5, pady=5)
ban1input.grid(row=3, column=1, padx=5, pady=5)
ban2input.grid(row=4, column=1, padx=5, pady=5)
runainput.grid(row=5, column=1, padx=5, pady=5)


#BOTÃO ENVIAR DADOS

enviar = Button(janela, command=iniciar, text="Ativar")
enviar.grid(column=1, row=8, padx=10, pady=10)

poutput1 = iniciar()


personagem1 = pyscreeze.locateCenterOnScreen(poutput1png, confidence= 0.8, minSearchTime=50)
pyautogui.moveTo(personagem1, duration = 1)
pyautogui.click()

time.sleep(15)


#CONFIRMAR NOCTUNE
personagemc = pyscreeze.locateCenterOnScreen("noctunec.png", confidence= 0.8, minSearchTime=50)
pyautogui.moveTo(personagemc, duration = 1)
pyautogui.click()




janela.mainloop()
